{
  "name": "devtrackr",
  "displayName": "DevTrackr",
  "description": "Track developer activity and analyze coding patterns",
  "version": "1.0.0",
  "publisher": "anishsaha46",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "activity",
    "tracker",
    "analytics",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionKind": ["workspace"],
  "contributes": {
    "commands": [
      {
        "command": "devtrackr.login",
        "title": "Login to DevTrackr",
        "category": "DevTrackr"
      },
      {
        "command": "devtrackr.logout",
        "title": "Logout",
        "category": "DevTrackr"
      },
      {
        "command": "devtrackr.startTracking",
        "title": "Start Tracking",
        "category": "DevTrackr"
      },
      {
        "command": "devtrackr.stopTracking",
        "title": "Stop Tracking",
        "category": "DevTrackr"
      },
      {
        "command": "devtrackr.toggleTracking",
        "title": "Toggle Tracking",
        "category": "DevTrackr"
      }
    ],
    "configuration": {
      "title": "DevTrackr",
      "properties": {
        "devtrackr.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:8080/api/activities",
          "description": "Backend API endpoint for activity data (supports /batch for bulk operations)"
        },
        "devtrackr.projectId": {
          "type": "string",
          "default": "demo-project",
          "description": "Project identifier for activity tracking"
        },
        "devtrackr.syncInterval": {
          "type": "number",
          "default": 60,
          "description": "Interval in seconds to sync activity data"
        },
        "devtrackr.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start tracking when VS Code opens"
        },
        "devtrackr.authEndpoint": {
          "type": "string",
          "default": "http://localhost:8080/api/auth",
          "description": "Authentication endpoint for DevTrackr"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
